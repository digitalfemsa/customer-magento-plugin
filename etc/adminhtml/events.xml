<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <!-- Define the event and observer -->
    <event name="admin_system_config_changed_section_payment">
        <!-- Define the observer for the event -->
        <observer name="digitalfemsa_payments_observer_check_config" instance="DigitalFemsa\Payments\Observer\Webhook" />

        <!-- Add condition to execute observer only when specific configuration section is modified -->
        <condition>
            digitalfemsa_payments
        </condition>
    </event>
</config>
